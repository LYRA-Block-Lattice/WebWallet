{
    "manifest_version": 2,
    "name": "My Lyra",
    "description": "A browser based wallet manager for Lyra blockchain",
    "version": "0.1",
  
    "applications": {
      "gecko": {
        "id": "@lyra-wallet",
        "strict_min_version": "54.0"
      }
    },
  
    "icons": {
        "16": "/images/icocolor2_16.png",
        "32": "/images/icocolor2_32.png",
        "48": "/images/icocolor2_48.png",
        "128": "/images/icocolor2_128.png"
    },
  
    "browser_action": {
      "default_icon": {
        "16": "/images/icocolor2_16.png",
        "32": "/images/icocolor2_32.png",
        "48": "/images/icocolor2_48.png",
        "128": "/images/icocolor2_128.png"
      },
  
      "default_popup": "index.html",
      "browser_style": true
    },
  
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
    "background": {
      "scripts": ["worker.js"]
    },
  
    "permissions": ["file:///*", "http://*/*", "https://*/*", "clipboardWrite"]
  }